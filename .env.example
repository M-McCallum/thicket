# =============================================================================
# Thicket — Environment Variables
# =============================================================================
# Copy to .env and fill in values.
# For local development, the defaults below work with docker-compose.dev.yml.
# For production (Dokploy), set every variable marked [REQUIRED].
# =============================================================================

# ---- Domain (production only) ----
# The public domain Traefik routes traffic to. Not used in dev.
# DOMAIN=thicket.app
# APP_URL=https://thicket.app

# ---- Database ----
DB_USER=thicket
DB_PASSWORD=thicket_dev              # [REQUIRED] Generate: openssl rand -hex 32
DB_NAME=thicket
DB_SSL_MODE=disable

# ---- Ory Hydra ----
HYDRA_SECRETS_SYSTEM=               # [REQUIRED] Generate: openssl rand -hex 32
HYDRA_PUBLIC_URL=http://localhost:4444
# Production: HYDRA_PUBLIC_URL=https://thicket.app

# ---- Ory Kratos ----
KRATOS_PUBLIC_URL=http://localhost:4433
# Production: KRATOS_PUBLIC_URL=https://thicket.app

# ---- JWT (used by Go backend) ----
JWT_SECRET=                          # [REQUIRED] Generate: openssl rand -hex 32
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=720h

# ---- Server ----
API_PORT=8080
API_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173

# ---- LiveKit ----
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret            # [REQUIRED] Generate: openssl rand -hex 32
LIVEKIT_URL=ws://localhost:7880

# ---- SMTP (production only — used by Kratos for email verification/recovery) ----
# SMTP_CONNECTION_URI=smtp://user:pass@smtp.example.com:587/
# Examples:
#   Resend:  smtp://resend:re_xxxx@smtp.resend.com:587/
#   Mailgun: smtp://postmaster@mg.thicket.app:key@smtp.mailgun.org:587/

# ---- OAuth Providers (optional — enable the ones you need) ----
DISCORD_OAUTH_CLIENT_ID=
DISCORD_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=

# ---- Environment ----
ENV=development

{
  "$id": "https://thicket.chat/schemas/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Thicket Identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "Username",
          "minLength": 3,
          "maxLength": 32,
          "pattern": "^[a-zA-Z0-9_]+$",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "webauthn": {
                "identifier": true
              }
            }
          }
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email",
          "ory.sh/kratos": {
            "recovery": {
              "via": "email"
            },
            "verification": {
              "via": "email"
            }
          }
        },
        "display_name": {
          "type": "string",
          "title": "Display Name",
          "maxLength": 64
        }
      },
      "required": ["username"],
      "additionalProperties": false
    }
  }
}
